{% extends 'base.html.twig' %}

{% block title %}Modifier un Trick
{% endblock %}

{% block body %}
	<section class="wrapper-inputs register">
		{{ form_start(form) }}
		<h3>Nom</h3>
		{{ form_row(form.name) }}
		<h3>Description</h3>
		{{ form_row(form.description, {'attr': {'class': 'form-control trick-textarea'}}) }}
		{{ form_errors(form.description) }}
		<h3>Catégorie</h3>
		{{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.category) }}
		<h3>Image principale</h3>
		{{ form_row(form.mainImage) }}
		{{ form_errors(form.mainImage) }}
		{% if trick.pictures is not empty %}
			<h3>Images</h3>
			<div class="existing-images">
				{% for picture in trick.pictures %}
					<div class="image-thumbnail">
						<img src="{{ asset('assets/trick/' ~ picture.name) }}" alt="{{ trick.name }}" class="edit-centered-image">
						<a href="{{ path('app_trick_delete_image', {'id': trick.id, 'imageName': picture.name}) }}" class="delete-image">
							<i class="fa fa-trash-o"></i>
						</a>
					</div>
				{% endfor %}
			</div>
		{% endif %}
		{{ form_row(form.pictures) }}
		{{ form_errors(form.pictures) }}

		<h3>Liens de vidéos</h3>
		<div id='videos-list' data-prototype="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}">
			{% for video in videos %}
				<div class="video-input">
					<input type="text" name="videos[]" value="{{ video.name }}" class="form-control video-url" placeholder="Exemple : https://www.youtube.com/watch?v=LyfFuv4_wjQ&ab" title="URL YouTube ou Dailymotion">
				</div>
			{% endfor %}
		</div>
		<button type="button" id="add-video" class="btn btn-add">Ajouter une vidéo</button>

		{{ form_rest(form) }}
		<p>
			{{ form_errors(form) }}
		</p>
		<button type="submit" class="btn">Enregistrer</button>
		{{ form_end(form) }}
	</section>
{% endblock %}
